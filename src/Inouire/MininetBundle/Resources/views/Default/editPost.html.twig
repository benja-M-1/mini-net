                <button type="submit" class="btn btn-success pull-right" id="publish-button"><i class="icon-ok icon-white"></i> Publier</button>
                <br /><br />
                <textarea style="width: 100%" id="textarea" rows="10">{{ post.content }}</textarea>
            </form>
        </div>
    </div>
    
