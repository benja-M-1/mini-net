{% extends '::base.html.twig' %}

{% block body %}

    <div class="row">
        <a href="{{ path('album',{'year':year-1 }) }}" class="pull-left"><<{{ year - 1}}</a>
        <a href="{{ path('album',{'year':year+1 }) }}" class="pull-right">{{ year + 1}}>></a>
        <center><h1>{{ year }}</h1></center>
    </div>
    
    <hr>
    
    {% set currentMonth = '0' %}
            
    {% for post in post_list %}
        {% if post.hasImages %}
            {% set postMonth = post.date | date("Ym") %}
            {% if currentMonth < postMonth %}
                {% if currentMonth != 0 %}
                        </ul>
                    </div>
                </div>
                {% endif %}
                {% set currentMonth =  postMonth %}
                <div class="row">
					<a id="{{ currentMonth }}" class="anchoroffset"></a>
                    <div class="span2">
                        <h4>{{post.date | localeDate('medium','none',null,'MMMM') }}</h4> 
                    </div>
                    <div class="span10">
                        <ul class="thumbnails">           
            {% endif %}
            {% for image in post.images %}
                <li class="span2">
                    <a href="{{ image.webpath }}" class="thumbnail" rel="lightbox[{{year}}]">
                         <img src="{{ image.webpath | imagine_filter('small_thumb') }}" />
                    </a>
                </li>
            {% endfor %}
        {% endif %}
    {% endfor %}
    
            </ul>
        </div>
   </div>
{% endblock %}
