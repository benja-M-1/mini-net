{% extends 'InouireMininetBundle:Default:base.html.twig' %}

{% block title %}archives pour {{requested_date | localeDate('medium','none',null,'MMMM')}} {{ requested_year }}{% endblock %}

{% block body %}
    
    
    <div>
        <center><h1>{{ requested_year }}</h1></center>
        <div class="pagination pagination-centered">
            <ul>
                <li><b><a href="{{ path('posts',{'year':requested_year-1 , 'month': requested_month }) }}"> &larr; {{ requested_year - 1}} </a></b></li>
            {% for month in  months_of_year %}
                {% set month_nb = month | date('m') %}
                {% if  month_nb == requested_month  %}
                    <li class="active"><span>{{ month | localeDate('medium','none',null,'MMMM') }}</span></li>
                {% else %}
                    <li><a href="{{ path('posts',{'year':requested_year , 'month': month_nb }) }}">{{ month | localeDate('medium','none',null,'MMMM') }}</a></li>
                {% endif %}
            {% endfor %}
                <li><b><a href="{{ path('posts',{'year':requested_year+1 , 'month': requested_month }) }}"> {{ requested_year + 1}} &rarr;</a></b></li>
            </ul>
        </div>
    </div>

    <br>
   
    {% block posts %}
    {% endblock %}
        
{% endblock %}

